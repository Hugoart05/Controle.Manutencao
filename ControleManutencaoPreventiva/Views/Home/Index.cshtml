@section Scripts{
    <script src="~/js/apiCondominio"></script>
}
<style>
    *{
        padding:inherit;
        margin:0;
    }
    .grid-colum {
        display: grid;
        grid-template-columns: minmax(80px, 250px) auto
    }
    .sidebar{
        background: linear-gradient(to left, #5927BF, #5F10FF);
        height:100vh;
        overflow: hidden;
    }

    .sidebar ul{
        width:100%;
        display:flex;
        flex-direction:column;
        height:100%;
        padding:0;
    }
    .sidebar ul li{
        list-style:none;
        width: 100%;
        height:100px;
        margin:0;
        padding: 0;
                border-bottom: 1px solid rgba(63,63,63, 0.2); >a{
            display: flex;
            width: 100%;
            height: 100%;
            align-items:center;
            justify-content:center;
            text-decoration:none;
            color: #ffff;
            font-weight: 700;
            transition: 0.3s;
            &:hover{
                background-color: #4B2990;
            }
        }
    }

    .conteudo{
        height: 100%;
        padding: 20px;
        max-width:980px
        
    }
    .buttons{
        gap: 8px;
        >button{
            background: linear-gradient(to left, #5927BF, #5F10FF);
            color:white;
        }
        >input{
            max-width: 300px;
            font-style:italic;
            padding-left: 20px
        }
    }

    .content-conteudo {
        width: 100%;
        height: 100%;
        max-height: 700px;
        border: 1px solid rgba(63,63,63,0.1);
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(63,63,63,0.3)
    }

    @@media screen and (max-width: 820px){
        .grid-colum {
            display: grid;
            grid-template-columns:80px auto
        }

        .sidebar .nav-list{
            display: none;
        }
    }
        
</style>

<div class="grid-colum">

    <div class="sidebar" >
        <ul class="nav-list">
            <li><a href="#">Home</a></li>
            <li><a href="#">Listar Todos</a></li>
            <li><a href="#">Condominios</a></li>
            <li><a href="#">Painel de controle</a></li>
            <li><a href="#">Sair</a></li>
        </ul>
        <ul class="nav-icons">
            <li><a href="#">ddsdsdsd</a></li>
        </ul>
       
    </div>
    
    <main class="conteudo">
        <h1>Controle de preventiva</h1>
        <div class="buttons d-flex align-items-center">
            <button class="btn ">Adicionar</button>
            <input type="text" class="form-control" placeholder="pesquisar" />
        </div>
        <div class="content-conteudo">
            
        </div>
    </main>
</div>